<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">


    <context:annotation-config />
    <context:component-scan base-package="org.motechproject.openmrs19" />
    <mvc:annotation-driven/>

    <bean id="openMrs19Settings" class="org.motechproject.config.SettingsFacade" autowire="byType">
        <property name="rawConfigFiles">
            <list>
                <value>classpath:openmrs-configs.json</value>
            </list>
        </property>
    </bean>

    <bean id="openMrsHttpClient" class="org.motechproject.openmrs19.rest.HttpClientFactoryBean">
    </bean>

    <bean id="requestFactory" class="org.springframework.http.client.CommonsClientHttpRequestFactory">
        <constructor-arg ref="openMrsHttpClient"/>
    </bean>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
        <constructor-arg ref="requestFactory"/>
        <property name="messageConverters">
            <list>
                <bean class="org.springframework.http.converter.StringHttpMessageConverter"/>
            </list>
        </property>
    </bean>

    <bean id="openMRSVelocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
        <property name="velocityProperties">
            <value>
                resource.loader=class
                class.resource.loader.class=org.motechproject.openmrs19.tasks.VelocityResourceLoader
            </value>
        </property>
    </bean>

</beans>
