<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config />
    <context:component-scan base-package="org.motechproject.atomclient" />

    <bean id="atomClientSettings" class="org.motechproject.config.SettingsFacade" autowire="byType">
        <property name="configFiles">
            <list>
                <value>classpath:atom-client-defaults.properties</value>
            </list>
        </property>
        <property name="rawConfigFiles">
            <list>
                <value>classpath:atom-client-feeds.json</value>
            </list>
        </property>
    </bean>

</beans>
